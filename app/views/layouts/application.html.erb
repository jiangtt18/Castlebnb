<!DOCTYPE html>
<html>
  <head>
    <title>Castlebnb</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>


    <% if current_user %>
      <script>
        window.currentUser = {
          "id": <%= current_user.id %>,
          "firstname": "<%= current_user.firstname %>",
          "lastname": "<%= current_user.lastname %>",
          "email": "<%= current_user.email %>"
          };
      </script>
    <% end %>

  </head>

  <body>
    <%= yield %>
  </body>
</html>
